<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="profile"
            type="com.team_ia.domain.entity.MemberEntity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_ibtn_back_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0142" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_back_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0166" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_btn_confirm_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0118" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_iv_profile_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1232" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_btn_change_profile_picture_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1896" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_name_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2512" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_ibtn_back_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0474" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_back_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0450" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_btn_confirm_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0498" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_iv_profile_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2180" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_btn_change_profile_picture_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2227" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_btn_change_profile_picture_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5462" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_btn_change_profile_picture_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6179" />

        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:background="@drawable/ibtn_back_button"
            app:layout_constraintTop_toTopOf="@id/g_ibtn_back_t"
            app:layout_constraintBottom_toBottomOf="@id/g_ibtn_back_b"
            app:layout_constraintStart_toStartOf="parent" />
        <ImageButton
            android:id="@+id/btn_change_profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_change_profile_picture"
            app:layout_constraintTop_toTopOf="@id/g_btn_change_profile_picture_t"
            app:layout_constraintBottom_toBottomOf="@id/g_btn_change_profile_picture_b"
            app:layout_constraintStart_toStartOf="@id/g_btn_change_profile_picture_s"
            app:layout_constraintEnd_toEndOf="@id/g_btn_change_profile_picture_e" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_confirm"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="@id/g_btn_confirm_t"
            app:layout_constraintBottom_toBottomOf="@id/g_btn_confirm_b"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/back"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintTop_toTopOf="@id/g_tv_back_t"
            app:layout_constraintBottom_toBottomOf="@id/g_tv_back_b"
            app:layout_constraintStart_toEndOf="@id/ibtn_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintTop_toTopOf="@id/g_tv_back_t"
            app:layout_constraintBottom_toBottomOf="@id/g_tv_back_b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintTop_toTopOf="@id/g_tv_name_t"
            app:layout_constraintStart_toStartOf="@id/et_name" />
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/et_name"
            app:layout_constraintStart_toStartOf="@id/et_name" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:paddingStart="16dp"
            android:paddingVertical="15dp"
            android:hint="@{profile.name}"
            android:textColor="@color/black"
            android:textColorHint="@color/first_time_in_ia"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
        <EditText
            android:id="@+id/et_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:paddingStart="16dp"
            android:paddingVertical="15dp"
            android:hint="@{profile.email}"
            android:textColor="@color/black"
            android:textColorHint="@color/first_time_in_ia"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintTop_toBottomOf="@id/tv_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:layout_width="84dp"
            android:layout_height="84dp"
            app:layout_constraintTop_toTopOf="@id/g_iv_profile_t"
            app:layout_constraintBottom_toBottomOf="@id/g_iv_profile_b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>