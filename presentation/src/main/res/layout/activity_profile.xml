<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="goTo"
            type="com.team_ia.idea_archive_android.ui.profile.ProfileActivity" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_page_background">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_ibtn_back_button_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0427" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_top_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="35dp" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_iv_profile_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1185" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_name_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2370" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_v_vertical_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2927" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_nav_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3175" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_view_pager_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3744" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_btn_detail_t"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2393" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_ibtn_back_button_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0758" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_top_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="723dp" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_iv_profile_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2180" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_name_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2630" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_v_vertical_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3045" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_nav_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3555" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_btn_detail_b"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2607" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_ibtn_back_button_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.0308" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_back_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1128" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_my_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4026" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_iv_profile_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.3923" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_name_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4231" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_nav_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.0513" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_btn_detail_s"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5769" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_ibtn_back_button_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1026" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tb_back_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2570" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_my_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5769" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_iv_profile_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6077" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_tv_name_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5796" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_nav_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9487" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g_btn_detail_e"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6231" />


        <ImageButton
            android:id="@+id/ibtn_back_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:src="@drawable/ibtn_back_button"
            android:background="@drawable/bg_bottom_nav"
            android:onClick="@{goTo::onClickPageButton}"
            app:layout_constraintTop_toTopOf="@id/g_ibtn_back_button_t"
            app:layout_constraintBottom_toBottomOf="@id/g_ibtn_back_button_b"
            app:layout_constraintStart_toStartOf="@id/g_ibtn_back_button_s"
            app:layout_constraintEnd_toEndOf="@id/g_ibtn_back_button_e" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="@string/back"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="@id/g_tv_top_t"
            app:layout_constraintBottom_toBottomOf="@id/g_tv_top_b"
            app:layout_constraintStart_toStartOf="@id/g_tv_back_s"
            app:layout_constraintEnd_toEndOf="@id/g_tb_back_e" />
        <TextView
            android:id="@+id/tv_my"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/pretendard_regular"
            android:text="@string/my_page"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/g_tv_top_t"
            app:layout_constraintBottom_toBottomOf="@id/g_tv_top_b"
            app:layout_constraintStart_toStartOf="@id/g_tv_my_s"
            app:layout_constraintEnd_toEndOf="@id/g_tv_my_e" />
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="@string/default_name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:letterSpacing="0.25"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="@id/g_tv_name_t"
            app:layout_constraintBottom_toBottomOf="@id/g_tv_name_b"
            app:layout_constraintStart_toStartOf="@id/g_tv_name_s"
            app:layout_constraintEnd_toEndOf="@id/g_tv_name_e" />


        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="84dp"
            android:layout_height="84dp"
            app:layout_constraintTop_toTopOf="@id/g_iv_profile_t"
            app:layout_constraintBottom_toBottomOf="@id/g_iv_profile_b"
            app:layout_constraintStart_toStartOf="@id/g_iv_profile_s"
            app:layout_constraintEnd_toEndOf="@id/g_iv_profile_e" />

        <ImageButton
            android:id="@+id/btn_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/bg_go_to"
            android:background="@drawable/bg_bottom_nav"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="@{goTo::onClickPageButton}"
            app:layout_constraintTop_toTopOf="@id/g_btn_detail_t"
            app:layout_constraintBottom_toBottomOf="@id/g_btn_detail_b"
            app:layout_constraintStart_toStartOf="@id/g_btn_detail_s"
            app:layout_constraintEnd_toEndOf="@id/g_btn_detail_e" />


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_profile"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:tabTextColor="@drawable/selector_nav_color_text"
            app:tabTextAppearance="@style/tabTextStyle"
            app:tabPaddingEnd="-1dp"
            app:tabPaddingStart="-1dp"
            app:tabIndicatorColor="@drawable/selector_nav_color"
            app:tabBackground="@drawable/selector_nav_bg"
            app:tabIndicatorHeight="0.5dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:layout_constraintTop_toTopOf="@id/g_nav_t"
            app:layout_constraintBottom_toBottomOf="@id/g_nav_b"
            app:layout_constraintStart_toStartOf="@id/g_nav_s"
            app:layout_constraintEnd_toEndOf="@id/g_nav_e" >
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/g_view_pager_t"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/g_nav_s"
            app:layout_constraintEnd_toEndOf="@id/g_nav_e" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>